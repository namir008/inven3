{% extends "base.jinja" %}

{% block content %}
<div class="row">
    <div class="col-md-6">
        <h2>Warehouses</h2>
        <ul class="list-group">
            {% for warehouse in warehouses %}
            <li class="list-group-item">{{ warehouse[1] }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="col-md-6">
        <h2>Products</h2>
        <ul class="list-group">
            {% for product in products %}
            <li class="list-group-item">
                {{ product[1] }}: {{ product[2] }} 
                <span class="badge bg-primary">Unallocated: {{ product[3] }}</span>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>

<div class="mt-4">
    <h2>Summary</h2>
    <ul class="list-group">
        {% for item in summary %}
        <li class="list-group-item">{{ item[0] }}: Unallocated - {{ item[1] }}, Total - {{ item[2] }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
