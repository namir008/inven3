{% extends "base.jinja" %}

{% block content %}
<form method="POST" action="{{ url_for('product') }}">
    <label for="prod_name">Product Name:</label>
    <input type="text" id="prod_name" name="prod_name" required>
    <label for="prod_quantity">Quantity:</label>
    <input type="number" id="prod_quantity" name="prod_quantity" required>
    <button type="submit">Add Product</button>
</form>

<h2>Products List</h2>
<ul>
    {% for product in products %}
        <li>{{ product[1] }}: {{ product[2] }}</li>
    {% endfor %}
</ul>
{% endblock %}
